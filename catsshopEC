<body>
    <header>
        <h1>🐱 にゃんこショップ 🐱</h1>
    </header>

    <div class="container">
        <div class="products" id="product-list">
            <!-- 商品は JavaScript で動的に追加されます -->
        </div>
    </div>

    <script>
        // 商品データ
        const products = [
            {
                id: 1,
                name: "猫用おもちゃ - ねずみさん",
                price: 800,
                image: "https://placehold.jp/250x200.png",
                description: "猫ちゃん大好きなねずみのおもちゃ"
            },
            {
                id: 2,
                name: "プレミアムキャットフード",
                price: 3000,
                image: "https://placehold.jp/250x200.png",
                description: "栄養たっぷりの高品質キャットフード"
            },
            {
                id: 3,
                name: "ふかふか猫ベッド",
                price: 5000,
                image: "https://placehold.jp/250x200.png",
                description: "快適な睡眠のための高級ベッド"
            }
        ];

        // 商品を表示する関数
        function displayProducts() {
            const productList = document.getElementById('product-list');
            
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                
                productCard.innerHTML = `
                    <img src="${product.image}" alt="${product.name}">
                    <h3>${product.name}</h3>
                    <p>${product.description}</p>
                    <p>¥${product.price}</p>
                    <button class="cart-button" onclick="addToCart(${product.id})">
                        カートに追加
                    </button>
                `;
                
                productList.appendChild(productCard);
            });
        }

        // カートに追加する関数
        function addToCart(productId) {
            alert('商品をカートに追加しました！');
            // ここにカート機能の実装を追加できます
        }

        // ページ読み込み時に商品を表示
        window.onload = displayProducts;
    </script>
</body>
</html>
